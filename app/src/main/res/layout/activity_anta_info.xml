<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/verde_floresta"
    tools:context=".AntaInfoActivity">

    <TextView
        android:id="@+id/anta_title"
        android:layout_width="257dp"
        android:layout_height="41dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/button_back"
        android:text="Informações sobre a Anta Brasileira"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/anta_desc"
        android:layout_width="356dp"
        android:layout_height="68dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="442dp"
        android:text="Descrição do animal."
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/anta_id"
        android:layout_width="139dp"
        android:layout_height="137dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="138dp"
        android:layout_marginBottom="517dp"
        app:srcCompat="@drawable/anta_brasileira_icon" />

    <Button
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/anta_id"
        android:layout_marginBottom="19dp"
        android:backgroundTint="@color/verde_floresta_escuro"
        android:text="Voltar" />
</RelativeLayout>
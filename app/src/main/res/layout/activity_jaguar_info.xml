<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/verde_floresta"> <!-- Adiciona um fundo escuro e transparente -->

    <!-- Botão de Voltar -->
    <Button
        android:id="@+id/button_back"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/jaguar_info_image"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="-3dp"
        android:background="@drawable/button_close"
        android:backgroundTint="@color/verde_floresta_escuro" />

    <!-- Título da Informação ao lado do botão de voltar -->

    <!-- Imagem da Onça - aumentada -->
    <TextView
        android:id="@+id/jaguar_info_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@id/button_back"
        android:text="Informações sobre a Onça"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Descrição da Onça - texto maior -->

    <ImageView
        android:id="@+id/jaguar_info_image"
        android:layout_width="74dp"
        android:layout_height="84dp"
        android:layout_below="@id/jaguar_info_title"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="162dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="175dp"
        android:src="@drawable/jaguar_icon" />

    <TextView
        android:id="@+id/jaguar_info_description"
        android:layout_width="388dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/jaguar_info_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:text="Descrição completa sobre a onça, seus habitats, status de extinção, etc."
        android:textColor="#FFFFFF"
        android:textSize="18sp" />
</RelativeLayout>

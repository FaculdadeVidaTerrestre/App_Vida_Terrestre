<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GatoMaracajaInfoActivity">

    <TextView
        android:id="@+id/gato_desc"
        android:layout_width="wrap_content"
        android:layout_height="88dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="415dp"
        android:text="Descrição do animal."
        android:textSize="24sp" />

    <TextView
        android:id="@+id/gato_title"
        android:layout_width="290dp"
        android:layout_height="29dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@+id/button_back"
        android:text="Informações sobre o Gato Maracajá"
        android:textSize="16sp" />

    <Button
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/gato_id"
        android:layout_marginBottom="10dp"
        android:text="Voltar" />

    <ImageView
        android:id="@+id/gato_id"
        android:layout_width="152dp"
        android:layout_height="133dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="121dp"
        android:layout_marginBottom="526dp"
        app:srcCompat="@drawable/gato_maracaja_icon" />
</RelativeLayout>
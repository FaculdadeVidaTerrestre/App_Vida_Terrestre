<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/branco_gelo"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome"
        android:textColorHint="#4E4E4E" />

    <EditText
        android:id="@+id/editTextTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Título da Proposta"
        android:textColorHint="#4E4E4E" />

    <EditText
        android:id="@+id/editTextBriefDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descrição Breve"
        android:textColorHint="#4E4E4E" />

    <EditText
        android:id="@+id/editTextDetailedDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descrição Detalhada"
        android:textColorHint="#4E4E4E" />

    <Button
        android:id="@+id/btnSubmitProposal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/verde_claro"
        android:text="Enviar Proposta"
        android:textColor="@color/verde_floresta" />
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MacacoInfoActivity">

    <TextView
        android:id="@+id/macaco_desc"
        android:layout_width="396dp"
        android:layout_height="101dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="385dp"
        android:text="Descrição do animal."
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/macaco_id"
        android:layout_width="139dp"
        android:layout_height="148dp"
        android:layout_below="@+id/macaco_title"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="113dp"
        android:layout_marginBottom="494dp"
        app:srcCompat="@drawable/macaco_aranha_icon" />

    <TextView
        android:id="@+id/macaco_title"
        android:layout_width="292dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="19dp"
        android:layout_toEndOf="@+id/button_back"
        android:text="Informações do Macaco Aranha"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="673dp"
        android:text="Voltar" />
</RelativeLayout>
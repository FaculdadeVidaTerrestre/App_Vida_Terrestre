<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/verde_floresta">

    <TextView
        android:id="@+id/araranjuba_desc"
        android:layout_width="383dp"
        android:layout_height="68dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="433dp"
        android:text="Descrição do animal."
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/araranjuba_id"
        android:layout_width="175dp"
        android:layout_height="174dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="116dp"
        android:layout_marginBottom="501dp"
        app:srcCompat="@drawable/araranjuba_icon" />

    <TextView
        android:id="@+id/araranjuba_title"
        android:layout_width="266dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/araranjuba_id"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="6dp"
        android:text="Informações da Araranjuba"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="679dp"
        android:backgroundTint="@color/verde_floresta_escuro"
        android:text="Voltar" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/verde_floresta"
    tools:context=".QueixadaInfoActivity">

    <TextView
        android:id="@+id/queixada_desc"
        android:layout_width="380dp"
        android:layout_height="102dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="383dp"
        android:text="Descriçao do animal."
        android:textSize="24sp" />

    <TextView
        android:id="@+id/queixada_title"
        android:layout_width="291dp"
        android:layout_height="34dp"
        android:layout_above="@+id/queixada_id"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="9dp"
        android:text="Informações da Queixada"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/queixada_id"
        android:layout_width="199dp"
        android:layout_height="175dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="89dp"
        android:layout_marginBottom="486dp"
        app:srcCompat="@drawable/queixada_icon" />

    <Button
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="320dp"
        android:layout_marginBottom="670dp"
        android:backgroundTint="@color/verde_floresta_escuro"
        android:text="Voltar" />
</RelativeLayout>
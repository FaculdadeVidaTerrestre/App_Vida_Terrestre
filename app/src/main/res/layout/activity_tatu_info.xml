<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/verde_floresta"
    tools:context=".TatuInfoActivity">

    <ImageView
        android:id="@+id/tatu_id"
        android:layout_width="223dp"
        android:layout_height="138dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="516dp"
        app:srcCompat="@drawable/tatu_canastra_icon" />

    <Button
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="318dp"
        android:layout_marginBottom="676dp"
        android:backgroundTint="@color/verde_floresta_escuro"
        android:text="Voltar" />

    <TextView
        android:id="@+id/tatu_title"
        android:layout_width="301dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="681dp"
        android:text="Informações do Tatu Canastra"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tatu_desc"
        android:layout_width="396dp"
        android:layout_height="96dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="398dp"
        android:text="Descrição do animal."
        android:textSize="24sp" />
</RelativeLayout>
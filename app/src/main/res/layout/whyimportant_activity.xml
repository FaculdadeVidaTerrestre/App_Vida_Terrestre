<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/verde_floresta"
    tools:context=".WhyImportantActivity">

    <!-- ScrollView para permitir rolagem do conteúdo -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- LinearLayout vertical para organizar conteúdo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Título Principal -->
            <TextView
                android:id="@+id/title_importance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A Importância da Vida Terrestre"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="16dp"/>

            <!-- Subtítulo Explicativo -->
            <TextView
                android:id="@+id/importance_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A vida terrestre é fundamental para a manutenção dos ecossistemas, equilíbrio climático e da biodiversidade. Vamos entender sua importância!"
                android:textSize="16sp"
                android:textColor="@color/branco_gelo"
                android:layout_marginBottom="20dp"
                android:padding="8dp"/>

            <!-- Imagem Representando a Vida Terrestre -->
            <ImageView
                android:id="@+id/image_importance"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/vida_animal_ia"
                android:contentDescription="Ilustração sobre a importância da vida terrestre"
                android:layout_marginBottom="20dp"
                android:scaleType="centerCrop"/>

            <!-- Texto Explicativo sobre Importância -->
            <TextView
                android:id="@+id/importance_text_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A vida terrestre engloba uma infinidade de organismos e ecossistemas, que são interdependentes. As florestas tropicais, por exemplo, produzem oxigênio e abrigam uma biodiversidade rica que é essencial para o equilíbrio ecológico global."
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_marginBottom="16dp"
                android:padding="8dp"/>

            <!-- Mais Informações -->
            <TextView
                android:id="@+id/importance_text_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Além disso, a vida terrestre desempenha um papel crucial na manutenção dos recursos naturais que são vitais para nossa sobrevivência, como água, alimentos e materiais para construção. Sua preservação é um dos maiores desafios do século XXI."
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_marginBottom="16dp"
                android:padding="8dp"/>

            <!-- Botão para Mais Informações -->
            <Button
                android:id="@+id/btn_more_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@color/verde_floresta_escuro"
                android:padding="12dp"
                android:text="Saiba Mais"
                android:textColor="@color/branco_gelo" />

            <!-- Rodapé com fonte de referência -->
            <TextView
                android:id="@+id/reference_source"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fonte: Instituto Brasileiro do Meio Ambiente e dos Recursos Naturais Renováveis (IBAMA)"
                android:textSize="12sp"
                android:textColor="@color/branco_gelo"
                android:gravity="center"
                android:layout_marginTop="30dp"/>
        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

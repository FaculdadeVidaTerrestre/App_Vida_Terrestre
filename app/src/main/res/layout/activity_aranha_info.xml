<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AranhaInfoActivity">

    <TextView
        android:id="@+id/aranha_desc"
        android:layout_width="389dp"
        android:layout_height="97dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="404dp"
        android:text="Descrição do animal."
        android:textSize="24sp" />

    <TextView
        android:id="@+id/aranha_title"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_above="@+id/aranha_id"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="8dp"
        android:text="Informações da Aranha Caranguejeira"
        android:textSize="19sp" />

    <ImageView
        android:id="@+id/aranha_id"
        android:layout_width="153dp"
        android:layout_height="162dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="119dp"
        android:layout_marginBottom="500dp"
        app:srcCompat="@drawable/aranha_caranguejeira_icon" />

    <Button
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="665dp"
        android:text="Voltar" />
</RelativeLayout>
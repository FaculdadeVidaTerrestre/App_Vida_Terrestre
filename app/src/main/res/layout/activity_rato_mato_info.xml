<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/verde_floresta"
    tools:context=".RatoMatoInfoActivity">

    <ImageView
        android:id="@+id/rato_id"
        android:layout_width="183dp"
        android:layout_height="196dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="85dp"
        android:layout_marginBottom="424dp"
        app:srcCompat="@drawable/rato_do_mato_icon" />

    <TextView
        android:id="@+id/rato_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="28dp"
        android:layout_toEndOf="@+id/button_back"
        android:text="Informações do Rato do Mato"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="17dp"
        android:backgroundTint="@color/verde_floresta_escuro"
        android:text="Voltar" />

    <TextView
        android:id="@+id/rato_desc"
        android:layout_width="373dp"
        android:layout_height="132dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="241dp"
        android:text="Descrição do animal."
        android:textSize="24sp" />
</RelativeLayout>
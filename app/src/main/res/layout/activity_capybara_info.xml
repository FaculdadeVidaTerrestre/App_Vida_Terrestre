<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/verde_floresta"
    tools:context=".CapybaraInfoActivity">

    <TextView
        android:id="@+id/desc_capy"
        android:layout_width="383dp"
        android:layout_height="91dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="379dp"
        android:text="Descrição sobre o animal."
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/capy_id"
        android:layout_width="159dp"
        android:layout_height="161dp"
        android:layout_below="@+id/capy_title"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="135dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="117dp"
        android:layout_marginBottom="477dp"
        app:srcCompat="@drawable/capivara_icon" />

    <TextView
        android:id="@+id/capy_title"
        android:layout_width="301dp"
        android:layout_height="34dp"
        android:layout_alignTop="@+id/button_back"
        android:layout_marginStart="11dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/button_back"
        android:text="Informações sobre a Capivara"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="679dp"
        android:backgroundTint="@color/verde_floresta_escuro"
        android:text="Voltar" />
</RelativeLayout>
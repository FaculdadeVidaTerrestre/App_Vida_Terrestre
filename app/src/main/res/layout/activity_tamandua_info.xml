<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/verde_floresta"
    tools:context=".TamanduaInfoActivity">

    <TextView
        android:id="@+id/tamandua_desc"
        android:layout_width="387dp"
        android:layout_height="114dp"
        android:layout_alignBottom="@+id/tamandua_id"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="-145dp"
        android:text="Descrição do animal."
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/tamandua_id"
        android:layout_width="166dp"
        android:layout_height="151dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="107dp"
        android:layout_marginBottom="529dp"
        app:srcCompat="@drawable/tamandua_icon" />

    <TextView
        android:id="@+id/tamandua_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tamandua_id"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@+id/button_back"
        android:text="Informações sobre o Tamanduá"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="678dp"
        android:backgroundTint="@color/verde_floresta_escuro"
        android:text="Voltar" />
</RelativeLayout>